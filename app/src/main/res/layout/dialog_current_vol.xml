<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_dialog_background"
        android:orientation="horizontal">


        <com.shuoxd.charge.view.DataItemView
            android:id="@+id/dataView_current"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            app:lefticon="@drawable/current"
            app:title="@string/m93_current" />

        <com.shuoxd.charge.view.DataItemView
            android:id="@+id/dataView_vol"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            app:lefticon="@drawable/voltage"
            app:title="@string/m94_voltage" />

    </LinearLayout>


</LinearLayout>